{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "days",
	"patterns": [
		{
			"include": "#variables"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#dividers"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"variables": {
			"patterns": [
				{
					"name": "variable.parameter.days",
					"match": "\\b^0.+\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.days",
					"match": "\\b(\\d+.?\\d*)\\b"
				}
			]
		},
		"comments": {
			"name": "comment.line.number-sign.days",
			"begin": "#",
			"end": "\n"
		},
		"dividers": {
			"patterns": [
				{
					"name": "entity.name.section.days",
					"match": "\\--"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.days",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.days",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.days",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.days"
}